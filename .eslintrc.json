{
	"env": {
		"node": true,
		"jest": true
	},
	"extends": [
		"airbnb-base",
		"plugin:jest/recommended",
		"plugin:security/recommended"
	],
	"plugins": [
		"jest",
		"security"
	],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-console": "error",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": [
			"off"
		],
		"semi-style": [
			"error",
			"last"
		],
		"semi": [
			"error",
			"always"
		],
		"arrow-body-style": [
			"error",
			"as-needed"
		],
		"no-multi-spaces": [
			"error",
			{
				"ignoreEOLComments": true
			}
		],
		"spaced-comment": [
			"error",
			"always",
			{
				"exceptions": [
					"/"
				]
			}
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 3,
				"maxEOF": 0
			}
		],
		"eol-last": [
			"error",
			"never"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"prefer-destructuring": [
			"error",
			{
				"array": false,
				"object": false
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true
			}
		],
		"operator-linebreak": [
			"error",
			"after",
			{
				"overrides": {
					"?": "before",
					":": "before"
				}
			}
		],
		"max-len": [
			"error",
			{
				"code": 180
			}
		],
		"no-return-assign": [
			"error",
			"except-parens"
		],
		"no-extra-semi": "error",
		"padded-blocks": [
			"error",
			"never",
			{
				"allowSingleLineBlocks": true
			}
		],
		"function-paren-newline": [
			"error",
			"consistent"
		],
		"object-curly-newline": [
			"error",
			{
				"multiline": true
			}
		],
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": [
					"**/tests/**",
					"**/test/**",
					"test.js",
					"tests.js"
				],
				"optionalDependencies": false,
				"peerDependencies": false
			}
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_"
			}
		],
		"no-param-reassign": [
			"error",
			{
				"props": false
			}
		],
		"require-await": "error",
		"no-underscore-dangle": [
			"error",
			{
				"allow": [
					"_id",
					"__v"
				]
			}
		],
		"no-plusplus": [
			"error",
			{
				"allowForLoopAfterthoughts": true
			}
		]
	}
}